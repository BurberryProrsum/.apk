<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backgroundborder"
    android:padding="16dp">


    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Планирование маршрута"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textColor="#000000" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">


        <TextView
            android:id="@+id/numbertime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="№3688 "
            android:visibility="gone"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />
            <TextView
                android:id="@+id/courierId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Курьер: " />
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="8dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">
            <TextView
                android:id="@+id/item_packets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пакеты: 2"
                android:paddingBottom="8dp"
                android:textSize="16sp"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/price_packets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статус: "
                android:textSize="16sp"
                android:textColor="#000000" />

                <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Статус: "
                android:textSize="16sp"
                android:textColor="#000000" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/payment_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оплата: б/н   "
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/change_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Оплата:  "
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="?"
                android:textColor="#000000"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/priceRub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ₽"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>
            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/address_adress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Адрес:  "
                    android:paddingBottom="8dp"
                    android:textSize="16sp"
                    android:textColor="#000000">

                </TextView>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="?"
                    android:textSize="16sp"
                    android:textColor="#000000" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="174dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:text="Не забудь терминал и сдачу"
                android:textSize="25dp"
                android:textStyle="bold">

            </TextView>

            <ImageView
                android:layout_width="80dp"
                android:layout_height="68dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/money" />

            <ImageView
                android:layout_width="93dp"
                android:layout_height="98dp"
                android:background="@drawable/terminal" />

        </LinearLayout>

    </LinearLayout>



    <Button
        android:id="@+id/buttongo"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:backgroundTint="#000000"
        android:text="Поехали!"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />



</LinearLayout>